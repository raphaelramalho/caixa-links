{
  "manifest_version": 3,
  "name": "CAIXA – Copiar Link do Imóvel",
  "version": "1.1.0",
  "description": "Copia o link do imóvel, adiciona atalhos visuais e abre detalhes em nova aba.",
  "permissions": ["clipboardWrite"],
  "host_permissions": ["https://venda-imoveis.caixa.gov.br/*"],
  "content_scripts": [
    {
      "matches": ["https://venda-imoveis.caixa.gov.br/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://venda-imoveis.caixa.gov.br/*"]
    }
  ]
}